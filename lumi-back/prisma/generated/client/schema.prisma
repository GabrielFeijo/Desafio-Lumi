generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id             String    @id @default(cuid())
  customerNumber BigInt    @unique
  name           String
  invoices       Invoice[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Invoice {
  id                                  String   @id @default(cuid())
  installationNumber                  BigInt
  referenceMonth                      String
  totalAmount                         Decimal  @db.Decimal(10, 2)
  dueDate                             DateTime
  energyQuantity                      Int
  energyAmount                        Decimal  @db.Decimal(10, 2)
  exemptEnergyQuantity                Int?
  exemptEnergyAmount                  Decimal? @db.Decimal(10, 2)
  compensatedEnergyQuantity           Int?
  compensatedEnergyAmount             Decimal? @db.Decimal(10, 2)
  municipalPublicLightingContribution Decimal  @db.Decimal(10, 2)
  pdfUrl                              String
  customerId                          BigInt
  customer                            Customer @relation(fields: [customerId], references: [customerNumber], onDelete: Cascade)
  createdAt                           DateTime @default(now())
  updatedAt                           DateTime @updatedAt

  @@index([customerId])
}
